<script>
  function linkTo(file){
    const u = new URL(location.href);
    const parts = u.pathname.split('/');
    parts[parts.length-1] = file;
    u.pathname = parts.join('/');
    return u.toString();
  }
  document.getElementById('goAppts').href = linkTo('appointments.html');
  document.getElementById('goCalc').href  = linkTo('calculator.html');
  document.getElementById('goContracts').href = linkTo('calculator.html#saved');
</script>
